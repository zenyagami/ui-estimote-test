<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_m"
    android:layout_marginTop="@dimen/margin_m"
    android:layout_marginLeft="@dimen/margin_l"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:background="?selectableItemBackground"
    android:layout_marginRight="@dimen/margin_l"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp">
<LinearLayout
    android:padding="@dimen/margin_m"
    android:paddingLeft="@dimen/margin_l"
    android:paddingTop="@dimen/margin_l"
    android:paddingBottom="@dimen/margin_l"
    android:paddingRight="@dimen/margin_l"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_gravity="center_vertical"
        android:id="@+id/adapter_coffee_photo"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_l"
        android:layout_marginRight="@dimen/margin_l"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/app_name"
            android:id="@+id/adapter_coffee_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:text="@string/coffe_sutitle"
            android:id="@+id/adapter_coffee_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_m"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_row_star"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/margin_l"
                android:text="25"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/adapter_row_promo"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
